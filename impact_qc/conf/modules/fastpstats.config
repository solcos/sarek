// FASTPSTATS

process {

    withName: 'FASTPSTATS' {
        //ext.prefix       = { "${meta.id}.fastpstats" }
        publishDir       = [
            mode: params.publish_dir_mode,
            path: { "${params.outdir}/impact_qc/fastpstats/${meta.id}" },
            pattern: "*{tsv}"
        ]
    } 
}
